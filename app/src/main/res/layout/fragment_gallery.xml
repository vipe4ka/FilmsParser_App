<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.gallery.GalleryFragment">

    <ImageView
            android:id="@+id/posterImageView"
            android:layout_width="245dp"
            android:layout_height="321dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:id="@+id/titleTextView"
            android:layout_width="241dp"
            android:layout_height="38dp"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@id/posterImageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="84dp"/>

    <TextView
            android:id="@+id/yearTextView"
            android:layout_width="287dp"
            android:layout_height="22dp"
            app:layout_constraintTop_toBottomOf="@id/titleTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" android:layout_marginStart="60dp"/>
    <TextView
            android:id="@+id/ratingTextView"
            android:layout_width="55dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toBottomOf="@id/yearTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="176dp" android:layout_marginTop="12dp"/>

    <TextView
            android:id="@+id/genresTextView"
            android:layout_width="167dp"
            android:layout_height="31dp"
            app:layout_constraintTop_toBottomOf="@id/ratingTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" android:layout_marginStart="228dp"/>
    <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="339dp"
            android:layout_height="121dp"
            app:layout_constraintTop_toBottomOf="@id/genresTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp" android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>