<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.gallery.GalleryFragment">

    <ImageView
            android:id="@+id/posterImageView"
            android:layout_width="245dp"
            android:layout_height="321dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"/>
    <TextView
            android:id="@+id/titleTextView"
            android:layout_width="241dp"
            android:layout_height="38dp"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@id/posterImageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="84dp"
            android:visibility="gone"/>

    <TextView
            android:id="@+id/yearTextView"
            android:layout_width="287dp"
            android:layout_height="22dp"
            app:layout_constraintTop_toBottomOf="@id/titleTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" android:layout_marginStart="60dp"
            android:visibility="gone"/>
    <TextView
            android:id="@+id/ratingTextView"
            android:layout_width="55dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toBottomOf="@id/yearTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="176dp" android:layout_marginTop="12dp"
            android:visibility="gone"/>

    <TextView
            android:id="@+id/genresTextView"
            android:layout_width="167dp"
            android:layout_height="31dp"
            app:layout_constraintTop_toBottomOf="@id/ratingTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" android:layout_marginStart="228dp"
            android:visibility="gone"/>
    <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="339dp"
            android:layout_height="121dp"
            app:layout_constraintTop_toBottomOf="@id/genresTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp" android:layout_marginTop="24dp"
            android:visibility="gone"/>

    <Button
            android:text="+"
            android:layout_width="65dp"
            android:layout_height="65dp" android:id="@+id/button"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="720dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="328dp" android:textSize="34sp"/>
    <LinearLayout
            android:id="@+id/layout_fields"
            android:layout_width="410dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/posterImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.821">

        <EditText
                android:id="@+id/edit_text_id"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:hint="Введите ID"
                android:inputType="number"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        />
        <Button
                android:id="@+id/button_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Найти"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>